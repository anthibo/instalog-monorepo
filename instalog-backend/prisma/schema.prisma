generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(uuid())
  name        String
  group       String
  actor       Actor    @relation(fields: [actor_id], references: [id])
  actor_id    String
  action      Action   @relation(fields: [action_id], references: [id])
  action_id   String
  target_id   String
  target_name String
  location    String
  occurred_at DateTime @default(now())
  metadata    Json?
}

model Actor {
  id              String  @id @default(uuid())
  email           String
  name            String
  hashed_password String
  events          Event[]
}

model Action {
  id     String  @id @default(uuid())
  name   String  @unique
  events Event[]
}
