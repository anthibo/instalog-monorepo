generator client {
  provider = "prisma-client-js"
    previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(uuid())
  group       String
  actor       Actor    @relation(fields: [actor_id], references: [id])
  actor_id    String
  action      Action   @relation(fields: [action_id], references: [id])
  action_id   String
  target_id   String
  target_name String
  location    String
  occurred_at DateTime  @unique @default(now())
  metadata    Json?
}

model Actor {
  id              String  @id @default(uuid())
  email           String @unique
  name            String
  hashed_password String
  sdk_secret_key  String?
  events          Event[]

  @@fulltext([name, email])
}

model Action {
  id     String  @id @default(uuid())
  name   String  @unique
  events Event[]

  @@fulltext([name])
}
